/* pages/activity/addPhone.wxss */

.from {
  padding: 40rpx;
}

.from view {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
}
.yzm label{
  letter-spacing: 8rpx;
}
.from view:first-child {
  border-top: 2rpx solid #e9e9e9;
}

.from .yzm {
  border-top: 2rpx solid #e9e9e9;
  border-bottom: 2rpx solid #e9e9e9;
}

.from view input {
  vertical-align: middle;
  display: inline-block;
}

.from view .yzm {
  width: 155rpx;
  text-align: center;
  height: 52rpx;
  line-height: 52rpx;
  border: 2rpx solid #00A600;
  color: #00A600;
  border-radius: 4rpx;
  float: right;
  margin-top: 24rpx;
  font-size: 26rpx;
}
.button {
  height: 112rpx;
  line-height: 112rpx;
  text-align: center;
  background:#FB4B30;
  border-radius: 56rpx;
  color: #fff;
  margin-top: 100rpx;
}
