/**app.wxss**/
@import "template/iconfont.wxss";

view {
  box-sizing: border-box;
}

.reminder {
  box-shadow: 0 0 22rpx 0 rgba(0, 0, 0, 0.14);
  border-radius: 20rpx;
  padding: 30rpx 40rpx 30rpx 66rpx;
  font-size: 26rpx;
  margin-top: 50rpx;
  position: relative;
  text-align: justify;
}

.reminder image {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 32rpx;
  left: 24rpx;
}

.reminder-text1 {
  color: #e8593e;
  display: block;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.phoneNumber {
  height: 148rpx;
  line-height: 72rpx;
  box-shadow: 0 0 22rpx 0 rgba(0, 0, 0, 0.14);
  border-radius: 20rpx;
  padding: 38rpx 26rpx;
  font-size: 26rpx;
  margin-top: 30rpx;
}

.phoneNumber image {
  width: 70rpx;
  height: 70rpx;
  float: left;
  margin-right: 26rpx;
}

.phoneNumber text {
  float: right;
}
